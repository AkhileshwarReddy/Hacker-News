<div class="container columns is-centered">
  <div class="card column is-two-thirds m-5 p-0">
    <div class="card-header">
      <p class="card-header-title">Edit <%= resource_name.to_s.humanize %></p>
    </div>

    <div class="card-content">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <p><%= f.label :username, class: "label is-small" %>
          <%= f.email_field :username, class: "input is-small" %></p>
        </div>

        <div class="field">
          <%= f.label :email, class: "label is-small" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-small" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password, class: "label is-small" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input is-small" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "label is-small" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-small" %>
        </div>

        <div class="field">
          <%= f.label :current_password, class: "label is-small" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "input is-small" %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class: "button" %>
        </div>
      <% end %>

        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button is-outlined is-danger is-small" %>
      </div>
      <div class="card-footer">
        <%= link_to "Back", :back, class: "card-footer-item" %>
      </div>
    </div>
  </div>
</div>