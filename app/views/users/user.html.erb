<div class="profile-form">
    <%= form_with model: @user do |f| %>
        <div>
            <label>user:</label>
            <p><%= @user.username %></p>
        </div>
        <div>
            <label>created:</label>
            <p><%= time_ago_in_words(@user.created_at) %> ago</p>
        </div>
        <div>
            <label>karma:</label>
            <p><%= @user.karma %></p>
        </div>

        <div>
            <p><%= f.label :about %>:</p>
            <p><%= f.text_area :about, size: "60x5" %></p>
        </div>
        
        <div>
            <p><%= f.label :email %>:</p>
            <p><%= f.email_field :email %></p>
        </div>

        <div>
            <p><%= f.label :showdead %>:</p>
            <p><%= f.select :showdead, [["yes", true], ["no", false]] %>
        </div>

        <div>
            <p><%= f.label :noprocrast %>:</p>
            <p><%= f.select :noprocrast, [["yes", true], ["no", false]] %>
        </div>

        <div>
            <p><%= f.label :max_visit %>:</p>
            <p><%= f.number_field :max_visit %></p>
        </div>

        <div>
            <p><%= f.label :minaway %>:</p>
            <p><%= f.number_field :minaway %></p>
        </div>

        <div>
            <p><%= f.label :delay %>:</p>
            <p><%= f.number_field :delay %></p>
        </div>

        <div>
            <div></div>
            <%= link_to "change password", "#" %>
        </div>
        <div>
            <div></div>
            <%= link_to "submissions", "#" %>
        </div>
        <div>
            <div></div>
            <%= link_to "comments", "#" %>
        </div>
        <div>
            <div></div>
            <%= link_to "hidden", "#" %>
        </div>
        <div>
            <div></div>
            <p><%= link_to "upvoted submissions", "#" %> / <%= link_to "comments", "#" %> <em>(private)</em></p>
        </div>
        <div>
            <div></div>
            <p><%= link_to "favorite submissions", "#" %> / <%= link_to "comments", "#" %> <em>(shared)</em></p>
        </div>

        <div>
            <%= f.submit "update" %>
        </div>
    <% end %>
</div>