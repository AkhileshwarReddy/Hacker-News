<header>
    <nav>
        <div class="nav-logo">
            <%= image_tag "logos/hacker-news-30.png", size: "28x28" %>
            <div class="nav-items">
                <h1>Hacker News</h1>
                <ul>
                    <% if current_user %>
                        <li>welcome |</li>
                    <% end %>
                    <li><%= link_to "new", newest_path %> |</li>
                    <% if current_user %>
                        <li>threads |</li>
                    <% end %>
                    <li>past |</li>
                    <li>comments |</li>
                    <li>ask |</li>
                    <li>show |</li>
                    <li>jobs |</li>
                    <li><%= link_to "submit", submit_path %></li>
                </ul>
            </div>
        </div>
        <div class="auth-items">
            <ul>
                <% if current_user %>
                  <li><%= current_user.username %> |</li>
                  <li><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
                <% else %>
                    <li><%= link_to "login", new_user_session_path %> |</li>
                    <li><%= link_to "sign up", new_user_registration_path %></li>
                <% end %>
            </ul>
        </div>
    </nav>
</header>